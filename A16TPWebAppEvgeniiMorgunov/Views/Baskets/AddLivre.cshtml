@{
    ViewData["Title"] = "Ajouter un Livre au Panier";
    long basketId = (long)ViewData["BasketId"];
}

<h1>Ajouter un Livre au Panier</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Sélectionner un livre</h4>
            </div>
            <div class="card-body">
                <form asp-action="AddLivre" method="post">
                    <input type="hidden" name="basketId" value="@basketId" />

                    <div class="form-group mb-3">
                        <label for="livreId" class="control-label">Livre</label>
                        <select id="livreId" name="livreId" class="form-control form-select" asp-items="ViewBag.LivreId">
                            <option value="">-- Sélectionnez un livre --</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label for="quantity" class="control-label">Quantité</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="10" />
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-success">Ajouter au panier</button>
                        <a asp-action="Details" asp-route-id="@basketId" class="btn btn-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>