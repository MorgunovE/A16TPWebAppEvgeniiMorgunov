@model A16TPWebAppEvgeniiMorgunov.Models.Basket

@{
    ViewData["Title"] = "Supprimer le Panier";
}

<h1>Supprimer le Panier</h1>

<div class="alert alert-danger">
    <h3>Êtes-vous sûr de vouloir supprimer ce panier?</h3>
    <p>Cette action est irréversible et supprimera tous les articles du panier.</p>
</div>

<div class="card mb-4 border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Panier de @Model.User?.Name @Model.User?.FamilyName</h4>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Utilisateur</dt>
            <dd class="col-sm-9">@Model.User?.Name @Model.User?.FamilyName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.User?.Email</dd>

            <dt class="col-sm-3">Nombre d'articles</dt>
            <dd class="col-sm-9">
                @(Model.BasketLivres?.Count ?? 0) article(s)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mb-4">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>