@model A16TPWebAppEvgeniiMorgunov.Models.User

@{
    ViewData["Title"] = "Supprimer";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet utilisateur?</h3>
<div>
    <h4>Utilisateur</h4>
    <hr />
    <div class="card border-danger mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">@Model.Name @Model.FamilyName</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FamilyName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FamilyName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Tel)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tel)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>